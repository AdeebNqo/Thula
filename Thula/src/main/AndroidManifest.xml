<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.adeebnqo.Thula"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application
        android:name="com.ThulaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppThemeDark">

        <meta-data android:name="com.mixpanel.android.MPConfig.ResourcePackageName" android:value="com.adeebnqo.Thula" />

        <activity
            android:name="com.adeebnqo.Thula.ui.popup.QKComposeActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adeebnqo.Thula.ui.MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:logo="@color/transparent"
            android:windowSoftInputMode="stateUnchanged|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.adeebnqo.Thula.ui.welcome.WelcomeActivity"
            android:theme="@style/AppThemeLight" />

        <!-- Popup activity -->
        <activity
            android:name="com.adeebnqo.Thula.ui.popup.QKReplyActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:windowSoftInputMode="adjustResize" />

        <!-- Message picker activity -->
        <activity
            android:name="com.adeebnqo.Thula.ui.popup.MessagePickerActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity=""
            android:theme="@style/AppThemeLightDialog" />

        <activity android:name="com.adeebnqo.Thula.ui.mms.SlideshowActivity" />
        <activity android:name="com.mixpanel.android.surveys.SurveyActivity"
            android:theme="@style/com_mixpanel_android_SurveyActivityTheme"/>


    <receiver
            android:name="com.adeebnqo.Thula.receiver.WearableIntentReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.receiver.WearableIntentReceiver.REPLY" />
            </intent-filter>
        </receiver>

        <!-- Broadcast receiver for SMS -->
        <receiver
            android:name="com.adeebnqo.Thula.receiver.SmsReceiver"
            android:enabled="@bool/hasKitKat"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.adeebnqo.Thula.receiver.IconColorReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_CHANGED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.action.PENDING_PACKAGE_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Legacy broadcast receiver for SMS -->
        <receiver
            android:name="com.adeebnqo.Thula.receiver.SmsReceiverLegacy"
            android:enabled="@bool/preKitKat">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Broadcast receiver for MMS -->
        <receiver
            android:name="com.adeebnqo.Thula.receiver.PushReceiver"
            android:permission="android.permission.BROADCAST_WAP_PUSH">
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.mmssms.SentReceiver">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.SMS_SENT" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.receiver.DeliveredReceiver">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.SMS_DELIVERED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.receiver.MessageFailedReceiver">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.NOTIFY_SMS_FAILURE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.receiver.MarkReadReceiver">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.MARK_READ" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adeebnqo.Thula.receiver.MarkSeenReceiver">
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.MARK_SEEN" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.adeebnqo.Thula.ui.widget.WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.adeebnqo.Thula.intent.action.ACTION_NOTIFY_DATASET_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <receiver android:name="com.adeebnqo.Thula.receiver.NightModeAutoReceiver" />
        <receiver
            android:name="com.mariussoft.endlessjabber.sdk.EndlessJabberReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.mariussoft.endlessjabber.action.extend" />
            </intent-filter>
        </receiver>

        <service android:name="com.mariussoft.endlessjabber.sdk.EndlessJabberWakefulService" />

        <service
            android:name="com.adeebnqo.Thula.receiver.UnreadBadgeService"
            android:exported="false" />

        <!-- Service that delivers messages from the phone "quick response" -->
        <service
            android:name="com.adeebnqo.Thula.service.HeadlessSmsSendService"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE">
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>
        <service
            android:name="com.adeebnqo.Thula.service.PushbulletService"
            android:permission="com.pushbullet.android.permission.READ_MESSAGING_EXTENSION_DATA">
            <intent-filter>
                <action android:name="com.pushbullet.android.extension.MessagingExtension" />
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="1" />
        </service>
        <service android:name="com.android.mms.transaction.TransactionService" />
        <service android:name="com.adeebnqo.Thula.service.NotificationService" />
        <service android:name="com.adeebnqo.Thula.service.MarkReadService" />
        <service android:name="com.adeebnqo.Thula.service.MarkSeenService" />
        <service android:name="com.adeebnqo.Thula.service.DeleteUnreadMessageService" />
        <service android:name="com.adeebnqo.Thula.service.CopyUnreadMessageTextService" />
        <service
            android:name="com.adeebnqo.Thula.ui.widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>
